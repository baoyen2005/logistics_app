<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TextView">
        <attr name="right" format="reference" />
        <attr name="top" format="reference" />
        <attr name="bottom" format="reference" />
        <attr name="left" format="reference" />
        <attr name="check" format="boolean" />
        <attr name="tint" format="color" />
        <attr name="background" format="reference" />
        <attr name="html" format="string" />
        <attr name="light" format="boolean" />
        <attr name="cusfont" format="enum">
            <enum name="Regular" value="0" />
            <enum name="Bold" value="1" />
            <enum name="Medium" value="2" />
            <enum name="Italic" value="3" />
            <enum name="SemiBold" value="4" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleProgressBar">
        <attr name="inner_radius" format="dimension" />
        <attr name="background_color" format="color" />
        <attr name="progress_color" format="color" />
        <attr name="progress_stoke_width" format="dimension" />
        <attr name="show_arrow" format="boolean" />
        <attr name="enable_circle_background" format="boolean" />
        <attr name="arrow_width" format="dimension" />
        <attr name="arrow_height" format="dimension" />
        <attr name="progress" format="integer" />
        <attr name="max" format="integer" />
        <attr name="progress_text_size" format="dimension" />
        <attr name="progress_text_color" format="color" />
        <attr name="progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>

    <style name="HintTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/color_text_8</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <declare-styleable name="GroupTextView">
        <attr name="gr_hint" format="string" />
        <attr name="gr_left_icon" format="reference" />
        <attr name="gr_right_icon" format="reference" />
        <attr name="gr_left_icon_width" format="dimension" />
        <attr name="gr_left_icon_height" format="dimension" />
        <attr name="gr_right_icon_width" format="dimension" />
        <attr name="gr_right_icon_height" format="dimension" />
        <attr name="gr_hint_text_color" format="integer" />
        <attr name="gr_text_color" format="integer" />
        <attr name="gr_text_size" format="dimension" />
        <attr name="gr_background_focus" format="reference" />
        <attr name="gr_background_lost_focus" format="reference" />
        <attr name="gr_background_group_edittext_drawable" format="reference" />
        <attr name="gr_background_edittext_color" format="reference" />
        <attr name="gr_is_show_clear_text" format="boolean" />
        <attr name="gr_max_length" format="integer" />
        <attr name="android:imeOptions" />
        <attr name="android:inputType" />
        <attr name="gr_text" format="string" />
        <attr name="gr_text_right" format="string" />
        <attr name="gr_is_edit_text_focusable" format="boolean" />
        <attr name="gr_is_show_right_icon" format="boolean" />
        <attr name="gr_title" format="string" />
        <attr name="gr_is_required_label" format="boolean" />
        <attr name="gr_is_gone_title" format="boolean" />
        <attr name="gr_is_show_text_right" format="boolean" />
        <attr name="gr_is_title_html" format="boolean" />
    </declare-styleable>

</resources>