<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/rlAdminOrderItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/merchant_color_ffffff"
    android:padding="@dimen/_16dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivImageIcon"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/_15dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/osm_ic_center_map" />

    <com.example.baseapp.view.Textview
        android:id="@+id/tvAdminOrderAmountItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:maxLines="1"
        android:textColor="@color/merchant_color_004a9c"
        android:textSize="@dimen/_16sp"
        app:cusfont="Bold"
        tool:text="99.120 Ä‘" />

    <com.example.baseapp.view.Textview
        android:id="@+id/tvAdminStatusOrderItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAdminOrderAmountItem"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/_2dp"
        android:maxLines="1"
        android:textColor="@color/merchant_color_004a9c"
        android:textSize="@dimen/_16sp"
        app:cusfont="Regular"
        tool:text="Thanh cong" />

    <com.example.baseapp.view.Textview
        android:id="@+id/tvAdminOrderCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp8"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_toStartOf="@id/tvAdminOrderAmountItem"
        android:layout_toEndOf="@id/ivImageIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/merchant_color_4a4a4a"
        android:textSize="@dimen/_16sp"
        app:cusfont="Bold"
        tool:text="Nguyen Van Anh" />

    <com.example.baseapp.view.Textview
        android:id="@+id/tvAdminTypeTransport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAdminOrderCode"
        android:layout_marginHorizontal="@dimen/dp8"
        android:layout_marginTop="@dimen/_2dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_toStartOf="@id/tvAdminStatusOrderItem"
        android:layout_toEndOf="@id/ivImageIcon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/merchant_color_a2a2a5"
        android:textSize="@dimen/_16sp"
        app:cusfont="Regular"
        tool:text="Nguyen Van Anh" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/llViewDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAdminTypeTransport"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.example.baseapp.view.Textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ssp_regular"
            android:text="@string/str_view_detail"
            android:textColor="@color/merchant_color_2ed573"
            android:textSize="@dimen/_16sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_detail" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>