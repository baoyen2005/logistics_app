<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background = "@drawable/shape_merchant_color_ffffff_corner_top_24"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <View
        android:id="@+id/view"
        android:layout_width="@dimen/dp32"
        android:layout_height="@dimen/dp4"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp8"
        android:background="@drawable/shape_merchant_color_999999_corner_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.example.baseapp.view.Textview
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15dp"
                android:layout_marginTop="@dimen/_24dp"
                android:fontFamily="@font/ssp_bold"
                android:gravity="center"
                android:text="@string/str_connect_card"
                android:textAllCaps="false"
                android:textColor="@color/merchant_color_4a4a4a"
                android:textSize="16sp" />

            <com.example.baseapp.view.GroupTextView
                android:id="@+id/edtCardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                app:gr_hint="@string/str_bank_name"
                app:gr_hint_text_color="@color/color_text_8"
                app:gr_is_show_clear_text="true"
                app:gr_right_icon="@drawable/ic_baseline_expand_more_24"
                app:gr_text_color="@color/black"
                app:gr_text_size="@dimen/_16sp"
                app:gr_title="@string/str_bank_name" />

            <com.example.baseapp.view.GroupTextView
                android:id="@+id/edtAccountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                app:gr_hint="@string/str_account_name"
                app:gr_hint_text_color="@color/color_text_8"
                app:gr_is_show_clear_text="true"
                app:gr_text_color="@color/black"
                app:gr_text_size="@dimen/_16sp"
                app:gr_title="@string/str_account_name" />

            <com.example.baseapp.view.GroupTextView
                android:id="@+id/edtCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                app:gr_hint="@string/str_card_number"
                app:gr_hint_text_color="@color/color_text_8"
                app:gr_is_show_clear_text="true"
                app:gr_text_color="@color/black"
                app:gr_text_size="@dimen/_16sp"
                app:gr_title="@string/str_card_number" />

            <com.example.baseapp.view.GroupTextView
                android:id="@+id/edtAccountNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                app:gr_hint="@string/str_account_number"
                app:gr_hint_text_color="@color/color_text_8"
                app:gr_is_show_clear_text="true"
                app:gr_text_color="@color/black"
                app:gr_text_size="@dimen/_16sp"
                app:gr_title="@string/str_account_number" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <com.example.baseapp.view.Textview
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginTop="15dp"
        android:text="@string/str_date_expired"
        android:textColor="@color/merchant_color_4a4a4a"
        android:textSize="@dimen/_14sp" />

    <com.example.bettinalogistics.ui.EditTextRound
        android:id="@+id/edtDateExpired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15dp"
        android:layout_marginHorizontal="@dimen/_15dp"
        android:layout_weight="1"
        android:background="@drawable/shape_merchant_color_f8f8f9_corner_12"
        android:hint="mm/yyyy" />

    <com.example.baseapp.view.Textview
        android:id="@+id/tvDateExpiredError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:textColor="@color/merchant_color_ea5b5b"
        android:textSize="@dimen/_14sp"
        app:cusfont="Bold" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCustomerInforContinued"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15dp"
            android:layout_marginTop="@dimen/_40dp"
            android:layout_marginBottom="@dimen/_40dp"
            android:layout_weight="1"
            android:background="@drawable/shape_merchant_color_004a9c_corner_12"
            android:fontFamily="@font/ssp_bold"
            android:gravity="center"
            android:paddingVertical="@dimen/dp8"
            android:text="@string/str_save"
            android:textAllCaps="false"
            android:textColor="@color/merchant_color_ffffff"
            android:textSize="@dimen/_16sp"
            android:visibility="gone"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnDeleteCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15dp"
            android:layout_marginTop="@dimen/_40dp"
            android:layout_marginBottom="@dimen/_40dp"
            android:layout_weight="1"
            android:background="@drawable/shape_ffffff_stroke_004a9c_corner_12"
            android:fontFamily="@font/ssp_bold"
            android:gravity="center"
            android:paddingVertical="@dimen/dp8"
            android:text="@string/str_delete_card"
            android:textAllCaps="false"
            android:textColor="@color/merchant_color_4a4a4a"
            android:textSize="@dimen/_16sp"
            android:visibility="gone"
            app:backgroundTint="@null" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>