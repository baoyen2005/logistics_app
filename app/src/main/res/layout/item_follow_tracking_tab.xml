<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_10dp"
    android:layout_marginEnd="@dimen/_15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <com.example.baseapp.view.Textview
        android:id="@+id/tvTrackingTabTitleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tool:text = "sssssssss"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewTrackingTabItem"
        android:layout_width="0dp"
        android:layout_height="1.5dp"
        android:background="@color/merchant_color_ea5b5b"
        android:layout_marginTop="@dimen/_10dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTrackingTabTitleItem"
        app:layout_constraintLeft_toLeftOf="@id/tvTrackingTabTitleItem"
        app:layout_constraintRight_toRightOf="@id/tvTrackingTabTitleItem"
        />
</androidx.constraintlayout.widget.ConstraintLayout>