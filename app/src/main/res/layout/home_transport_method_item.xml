<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="3"
    android:layout_marginTop="@dimen/_10dp"
    android:layout_marginStart="@dimen/_10dp"
    android:background="@drawable/bg_gray_color_corner_12"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvHomeTransportMethodTitleItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="@dimen/_50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:cardCornerRadius="@dimen/_10dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/ivHomeTransportMethodIconItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gray_color_corner_12_shape_oval"
            android:scaleType="centerCrop"
            android:src="@drawable/hangkhong" />
    </androidx.cardview.widget.CardView>
</LinearLayout>