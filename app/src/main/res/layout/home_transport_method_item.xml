<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:background="@drawable/bg_gray_color_corner_12"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvHomeTransportMethodTitleItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_17sp" />

    <ImageView
        android:id="@+id/ivHomeTransportMethodIconItem"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/bg_gray_color_corner_left_12"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/hangkhong" />
</LinearLayout>