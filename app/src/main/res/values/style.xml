<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <item name="hint" type="id" />

    <style name="edtInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_background_linear_signup</item>
        <item name="android:minWidth">240dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:hint">@string/email</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_size</item>
    </style>

    <style name="login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_bg_secondary_sea_green_dialog_button</item>
        <item name="android:minWidth">240dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/_10dp</item>
        <item name="android:text">@string/login</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/main_size</item>
    </style>


    <style name="PopupMenuOverlapAnchor" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:dropDownVerticalOffset">-50dp</item>
        <item name="android:dropDownHorizontalOffset">50dp</item>
        <item name="overlapAnchor">true</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary_dodger_blue_1</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/tertiary_gray</item>
    </style>
    <dimen name="main_size">22sp</dimen>

    <style name="DialogStyleBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheetRoundCornerStyle</item>

    </style>

    <style name="BottomSheetRoundCornerStyle" parent="Theme.AppCompat.NoActionBar" />

</resources>